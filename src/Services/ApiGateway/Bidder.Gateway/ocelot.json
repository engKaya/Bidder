{
  "Routes": [
    {
      "UseServiceDiscovery": true,
      "ServiceName": "IdentityService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "DownstreamScheme": "https",
      "UpstreamPathTemplate": "/IdentityService/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "UpstreamScheme": "https"
    },
    {
      "UseServiceDiscovery": true,
      "ServiceName": "BidService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "DownstreamScheme": "https",
      "UpstreamPathTemplate": "/BidService/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "UpstreamScheme": "https"
    },
    {
      "UseServiceDiscovery": true,
      "ServiceName": "LiveService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "DownstreamScheme": "ws",
      "UpstreamPathTemplate": "/LiveService/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "UpstreamScheme": "ws"
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000",
    "UseServiceDiscovery": true,
    "RequestIdKey": "OcRequestId",
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500,
      "Type": "PollConsul",
      "PollingInterval": 100
    }
  }
}